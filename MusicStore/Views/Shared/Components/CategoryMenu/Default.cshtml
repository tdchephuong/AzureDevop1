@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Album"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cd"></span> Browse<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Album" asp-action="List"
                   asp-route-category="@category.CategoryName">@category.CategoryName Albums</a>
            </li>
        }
        
    </ul>
</li>